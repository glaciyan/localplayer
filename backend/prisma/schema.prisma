generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  passwordHash String
  Session      Session[]
}

model Session {
  id         Int      @id @default(autoincrement())
  secureId   String   @unique
  user       User     @relation(fields: [username], references: [username])
  username   String
  validUntil DateTime
}
